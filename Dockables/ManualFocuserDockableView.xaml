<UserControl x:Class="Cwseo.NINA.ManualFocuser.Dockables.ManualFocuserDockableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cwseo.NINA.ManualFocuser.Dockables"
             xmlns:ninactrl="clr-namespace:NINA.CustomControlLibrary;assembly=NINA.CustomControlLibrary"
             xmlns:enum="clr-namespace:NINA.Core.Enum;assembly=NINA.Core"
             xmlns:ns="clr-namespace:NINA.Core.Locale;assembly=NINA.Core"
             xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Contrib.Wpf"
             xmlns:oxys="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf.Shared"
             xmlns:util="clr-namespace:NINA.Core.Utility;assembly=NINA.Core"
             xmlns:wpfutil="clr-namespace:NINA.WPF.Base.Utility;assembly=NINA.WPF.Base"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="650">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <wpfutil:SharedResourceDictionary Source="/NINA.WPF.Base;component/Resources/StaticResources/Brushes.xaml" />
                <wpfutil:SharedResourceDictionary Source="/NINA.WPF.Base;component/Resources/StaticResources/SVGDictionary.xaml" />
                <wpfutil:SharedResourceDictionary Source="/NINA.WPF.Base;component/Resources/StaticResources/Converters.xaml" />
                <wpfutil:SharedResourceDictionary Source="/NINA.WPF.Base;component/Resources/StaticResources/ProfileService.xaml" />
                <wpfutil:SharedResourceDictionary Source="/NINA.WPF.Base;component/Resources/Styles/CheckBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="5,0,5,0" IsEnabled="{Binding TelescopeInfo.TrackingEnabled}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Margin="0,5,0,5" Orientation="Vertical">
                <!-- 연결 안됨 -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,0" VerticalAlignment="Center" Height="20" IsEnabled="{Binding FocuserInfo.Connected}"
                    Visibility="{Binding FocuserInfo.Connected, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                    <TextBlock VerticalAlignment="Center" Text="{ns:Loc LblConnected}" />
                    <CheckBox Width="20"
                        Height="20"
                        Margin="5,0,0,0"
                        HorizontalAlignment="Left"
                        BorderBrush="Transparent"
                        IsChecked="{Binding FocuserInfo.Connected, FallbackValue=False, Mode=OneWay}"
                        IsEnabled="False"
                        Style="{StaticResource CheckmarkCheckbox}" />
                </StackPanel>

                <!--Is Tracking /  -->
                <Grid VerticalAlignment="Center" Height="25"
                        Visibility="{Binding FocuserInfo.Connected, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <!--Is Tracking /-->
                    <StackPanel Orientation="Horizontal" Grid.Column="0">
                        <TextBlock VerticalAlignment="Center" Text="Is Tracking" />
                        <CheckBox Width="20"
                            Height="20"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            BorderBrush="Transparent"
                            IsChecked="{Binding TelescopeInfo.TrackingEnabled, FallbackValue=False, Mode=OneWay}"
                            IsEnabled="False"
                            Style="{StaticResource CheckmarkCheckbox}"/>
                    </StackPanel>
                    <!--Is Guiding /-->
                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                        <TextBlock VerticalAlignment="Center" Text="Is Guiding" Margin="10,0,0,0"/>
                        <CheckBox Width="20"
                            Height="20"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            BorderBrush="Transparent"
                            IsChecked="{Binding TelescopeInfo.isPulseGuiding, FallbackValue=False, Mode=OneWay}"
                            IsEnabled="False"
                            Style="{StaticResource InvertedCheckmarkCheckbox}"/>
                    </StackPanel>
                    <!--exposure toggle /-->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0" VerticalAlignment="Center" Grid.Column="2" IsEnabled="{Binding CameraInfo.Connected}">
                        <TextBlock Margin="10,0,5,0" VerticalAlignment="Center" Text="Expose after focus"/>
                        <CheckBox IsChecked="{Binding TakeShootAfterMove}" IsEnabled="{Binding IsMoving, Converter={StaticResource InverseBooleanConverter}}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Center" Grid.Column="3">
                        <!-- MIN HFR -->
                        <TextBlock Text="MIN (Position, HFR) = ("/>
                        <TextBlock Margin="0,0,0,0" Text="{Binding MinStep}"/>
                        <TextBlock Text="," />
                        <TextBlock Margin="5,0,0,0" Text="{Binding MinHFR, StringFormat=F3}"/>
                        <TextBlock Text=")" />
                        <TextBlock Text=", Delta= ("/>
                        <TextBlock Margin="0,0,0,0" Text="{Binding StepDelta}" FontWeight="Bold"/>
                        <TextBlock Text="," />
                        <TextBlock Margin="5,0,0,0" Text="{Binding HFRDelta, StringFormat=F3}" FontWeight="Bold"/>
                        <TextBlock Text=")" />
                    </StackPanel>
                </Grid>
                <!-- GO/IN/OUT -->
                <Grid Height="25" Margin="0,5,5,0"
                            Visibility="{Binding FocuserInfo.Connected, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <!-- Target + GO -->
                    <Grid Margin="0,0,0,0" VerticalAlignment="Center" Grid.Column="0" Height="25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Target" VerticalAlignment="Center" Margin="0,0,5,0" Grid.Column="0"/>
                        <TextBox Grid.Column="1"
                            VerticalContentAlignment="Center"
                            Text="{Binding TargetPosition, UpdateSourceTrigger=PropertyChanged}"
                            IsEnabled="{Binding IsMoving, Converter={StaticResource InverseBooleanConverter}}"/>

                        <!-- ✅ 실행 중 Cancel로 바뀌려면 Command는 NINA AsyncCommand여야 함 -->
                        <ninactrl:CancellableButton Grid.Column="2"
                            MinWidth="50"
                            Margin="5,0,0,0"
                            ButtonText="{ns:Loc LblMove}"
                            ToolTip="{ns:Loc LblMoveFocuserTooltip}"
                            HorizontalContentAlignment="Center"
                            CancelButtonImage="{StaticResource CancelSVG}"
                            CancelCommand="{Binding HaltFocuserCommand}"
                            CancelToolTip="{ns:Loc LblCancel}"
                            Command="{Binding MoveToPositionCommand}">
                        </ninactrl:CancellableButton>
                    </Grid>

                    <!-- Step + In/Out -->
                    <Grid VerticalAlignment="Center" Margin="15,0,0,0" Grid.Column="1" Height="25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Step Inc." VerticalAlignment="Center" Margin="0,0,5,0" Grid.Column="0"/>
                        <TextBox Grid.Column="1"
                                VerticalContentAlignment="Center"
                                Text="{Binding UserStep, UpdateSourceTrigger=PropertyChanged}"
                                IsEnabled="{Binding IsMoving, Converter={StaticResource InverseBooleanConverter}}"/>

                        <ninactrl:CancellableButton Grid.Column="2"
                            MinWidth="50"
                            Margin="5,0,0,0"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center" 
                            ToolTip="Move in"
                            ButtonText="In(-)"
                            CancelButtonImage="{StaticResource CancelSVG}"
                            CancelCommand="{Binding HaltFocuserCommand}"
                            CancelToolTip="{ns:Loc LblCancel}"
                            Command="{Binding MoveINCommand}"/>

                        <ninactrl:CancellableButton Grid.Column="3"
                            MinWidth="50"
                            Margin="5,0,0,0"
                            HorizontalContentAlignment ="Center"
                            VerticalContentAlignment="Center" 
                            ToolTip="Move out"
                            ButtonText="Out(+)"
                            CancelButtonImage="{StaticResource CancelSVG}"
                            CancelCommand="{Binding HaltFocuserCommand}"
                            CancelToolTip="{ns:Loc LblCancel}"
                            Command="{Binding MoveOUTCommand}"/>
                    </Grid>
                    <Grid HorizontalAlignment="Left" Margin="15,0,0,0" Grid.Column="2" Height="25" IsEnabled="{Binding IsMoving, Converter={StaticResource InverseBooleanConverter}}">
                        <ninactrl:CancellableButton
                            Command="{Binding InputResetCommand}"
                            ButtonText="Input Reset"
                            MinWidth="90"
                            ToolTip="Target = MIN Position, Step Inc. = Focuser Setting Step"
                            HorizontalContentAlignment="Center">
                        </ninactrl:CancellableButton>
                    </Grid>
                <Grid HorizontalAlignment="Right" Margin="5,0,0,0" Grid.Column="3" Height="25" IsEnabled="{Binding IsMoving, Converter={StaticResource InverseBooleanConverter}}">
                        <ninactrl:CancellableButton
                            Command="{Binding ClearChartCommand}"
                            MinWidth="70"
                            ButtonText="Clear All"
                            ToolTip="Clear all points"
                            HorizontalContentAlignment="Center">
                        </ninactrl:CancellableButton>
                    </Grid>
                </Grid>
            </StackPanel>
            <oxy:Plot
                Grid.Row="1" Margin="0,0,0,0"
                Background="{StaticResource BackgroundBrush}"
                PlotAreaBackground="{StaticResource BackgroundBrush}"
                PlotAreaBorderColor="{Binding Path=Color, Source={StaticResource BorderBrush}}">
                <oxy:Plot.Legends>
                    <oxy:Legend
                        IsLegendVisible="True"
                        LegendBackground="{Binding Path=Color, Source={StaticResource BackgroundBrush}}"
                        LegendBorder="{Binding Path=Color, Source={StaticResource BorderBrush}}"
                        LegendFontSize="12"
                        LegendMaxHeight="35"
                        LegendOrientation="Horizontal"
                        LegendPadding="2"
                        LegendPlacement="Outside"
                        LegendPosition="TopCenter"
                        LegendSymbolLength="10"
                        LegendTextColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}" />
                </oxy:Plot.Legends>                
                <oxy:Plot.Axes>
                    <oxy:LinearAxis
                    Title="Average HFR"
                    TitleColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                    AxislineColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                    EndPosition="1"
                    IsPanEnabled="False"
                    IsZoomEnabled="True"
                    MajorGridlineColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}, Converter={StaticResource SetAlphaToColorConverter}, ConverterParameter=60}"
                    MajorGridlineStyle="LongDash"
                    MaximumPadding="0.1"
                    MinimumPadding="0.1"
                    Position="Left"
                    StartPosition="0"
                    TextColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                    TicklineColor="{Binding Path=Color, Source={StaticResource SecondaryBrush}}" />

                    <oxy:LinearAxis
                    Title="Spike - Intensity 2nd Moment"
                    TitleColor="{Binding Path=Color, Source={StaticResource NotificationWarningBrush}}"
                    AxislineColor="{Binding Path=Color, Source={StaticResource NotificationWarningBrush}}"
                    EndPosition="1"
                    IsPanEnabled="False"
                    IsZoomEnabled="False"
                    MajorGridlineColor="{Binding Path=Color, Source={StaticResource NotificationWarningBrush}, Converter={StaticResource SetAlphaToColorConverter}, ConverterParameter=60}"
                    MajorGridlineStyle="None"
                    MaximumPadding="0.1"
                    MinimumPadding="0.1"
                    Key="SecondaryY"
                    Position="Right"
                    StartPosition="0"
                    TextColor="{Binding Path=Color, Source={StaticResource NotificationWarningBrush}}"
                    TicklineColor="{Binding Path=Color, Source={StaticResource SecondaryBrush}}" />

                    <oxy:LinearAxis
                    Title="Focuser Position"
                    TitleColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                    AxislineColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                    EndPosition="1"
                    IsPanEnabled="False"
                    IsZoomEnabled="False"
                    MajorGridlineColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}, Converter={StaticResource SetAlphaToColorConverter}, ConverterParameter=60}"
                    MajorGridlineStyle="LongDash"
                    MaximumPadding="0.1"
                    MinimumPadding="0.1"
                    Position="Bottom"
                    StartPosition="0" 
                    TextColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                    TicklineColor="{Binding Path=Color, Source={StaticResource SecondaryBrush}}" />
                </oxy:Plot.Axes>
                <oxy:Plot.Series>
                    <oxy:ScatterErrorSeries
                        Title="HFR"
                        ItemsSource="{Binding HFRFocusPoints}" 
                        MarkerFill="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                        MarkerSize="4"
                        MarkerType="Circle"/>
                    <oxy:ScatterSeries
                        Title="Spike"
                        YAxisKey="SecondaryY"
                        ItemsSource="{Binding SpikeFocusPoints}" 
                        MarkerFill="{Binding Path=Color, Source={StaticResource NotificationWarningBrush}}"
                        MarkerSize="5"
                        MarkerType="Diamond"/>
                </oxy:Plot.Series>
                <oxy:Plot.Annotations>
                    <oxy:PointAnnotation
                        Fill="{Binding Path=Color, Source={StaticResource NotificationErrorBrush}}"
                        Shape="Triangle"
                        Size="8" 
                        Text="{Binding MinHFR, StringFormat=F3}"
                        TextColor="{Binding Path=Color, Source={StaticResource PrimaryBrush}}"
                        X="{Binding MinStep}"
                        Y="{Binding MinHFR}" />
                    <oxy:ArrowAnnotation
                        HeadWidth="7"
                        HeadLength="19"
                        Veeness="3"
                        StrokeThickness="1" 
                        LineStyle="DashDotDot"
                        Color="{Binding Path=Color, Source={StaticResource SecondaryBrush}}"
                        Text="{Binding HFRDelta, StringFormat=F3}"
                        TextColor="{Binding Path=Color, Source={StaticResource SecondaryBrush}}"
                        StartPoint="{Binding ArrowPoint[0]}" 
                        EndPoint="{Binding ArrowPoint[1]}"/>
                </oxy:Plot.Annotations>
            </oxy:Plot>
        </Grid>
    </ScrollViewer>
</UserControl>
