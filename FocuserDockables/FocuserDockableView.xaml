<UserControl x:Class="Cwseo.NINA.Focuser.FocuserDockables.FocuserDockableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ninactrl="clr-namespace:NINA.CustomControlLibrary;assembly=NINA.CustomControlLibrary"
             xmlns:ns="clr-namespace:NINA.Core.Locale;assembly=NINA.Core"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <!-- ✅ CancelSVG: 스코프 문제 회피용 (가장 단순) -->
        <GeometryGroup x:Key="CancelSVG">
            <PathGeometry Figures="M 33.188,1.656L 31.6773,0.145332L 16.5933,15.2293L 1.51067,0.145332L 0,1.656L 15.084,16.74L 0,31.8227L 1.51067,33.3333L 16.5933,18.2453L 31.6773,33.3333L 33.188,31.8227L 18.0987,16.74" />
        </GeometryGroup>
    </UserControl.Resources>

    <Grid Margin="8">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- 연결 안됨 -->
                <Border Margin="0,5,0,0"
                    VerticalAlignment="Top"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0"
                    Visibility="{Binding FocuserInfo.Connected, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                    <UniformGrid VerticalAlignment="Center" Columns="2">
                        <TextBlock VerticalAlignment="Center" Text="{ns:Loc LblConnected}" />
                        <CheckBox Width="20"
                      Height="20"
                      Margin="5,0,0,0"
                      HorizontalAlignment="Left"
                      BorderBrush="Transparent"
                      IsChecked="{Binding FocuserInfo.Connected, FallbackValue=False, Mode=OneWay}"
                      IsEnabled="False"
                      Style="{StaticResource CheckmarkCheckbox}" />
                    </UniformGrid>
                </Border>

                <!-- 연결됨 -->
                <StackPanel Orientation="Vertical"
                Visibility="{Binding FocuserInfo.Connected, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">

                    <Border Margin="0,5,0,0"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0">
                        <UniformGrid VerticalAlignment="Center" Columns="2">
                            <TextBlock VerticalAlignment="Center" Text="{ns:Loc LblIsMoving}" />
                            <CheckBox Width="20"
                          Height="20"
                          Margin="5,0,0,0"
                          HorizontalAlignment="Left"
                          BorderBrush="Transparent"
                          IsChecked="{Binding FocuserInfo.IsMoving, FallbackValue=False, Mode=OneWay}"
                          IsEnabled="False"
                          Style="{StaticResource InvertedCheckmarkCheckbox}" />
                        </UniformGrid>
                    </Border>

                    <Border Margin="0,5,0,0"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0">
                        <UniformGrid VerticalAlignment="Center" Columns="2">
                            <TextBlock VerticalAlignment="Center" Text="{ns:Loc LblIsSettling}" />
                            <CheckBox Width="20"
                          Height="20"
                          Margin="5,0,0,0"
                          HorizontalAlignment="Left"
                          BorderBrush="Transparent"
                          IsChecked="{Binding FocuserInfo.IsSettling, FallbackValue=False, Mode=OneWay}"
                          IsEnabled="False"
                          Style="{StaticResource InvertedCheckmarkCheckbox}" />
                        </UniformGrid>
                    </Border>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Position:" Width="90"/>
                        <TextBlock Text="{Binding FocuserInfo.Position}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,14">
                        <TextBlock Text="Temperature:" Width="90"/>
                        <TextBlock Text="{Binding FocuserInfo.Temperature, StringFormat={}{0:0.00} °C}"/>
                    </StackPanel>

                    <!-- Target + GO -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Target" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1"
                                 Height="26"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding TargetPosition, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding IsNotBusy}"/>

                        <!-- ✅ 실행 중 Cancel로 바뀌려면 Command는 NINA AsyncCommand여야 함 -->
                        <ninactrl:CancellableButton Grid.Column="2"
                                                    Height="26"
                                                    MinWidth="70"
                                                    Margin="8,0,0,0"
                                                    ButtonText="GO"
                                                    CancelButtonImage="{StaticResource CancelSVG}"
                                                    CancelCommand="{Binding HaltFocuserCommand}"
                                                    CancelToolTip="Cancel"
                                                    Command="{Binding MoveToPositionCommand}"/>
                    </Grid>

                    <!-- Step + In/Out -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Step" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1"
                                 Height="26"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding UserStep, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding IsNotBusy}"/>

                        <ninactrl:CancellableButton Grid.Column="2"
                                                    Height="26"
                                                    MinWidth="70"
                                                    Margin="8,0,0,0"
                                                    ButtonText="In(-)"
                                                    CancelButtonImage="{StaticResource CancelSVG}"
                                                    CancelCommand="{Binding HaltFocuserCommand}"
                                                    CancelToolTip="Cancel"
                                                    Command="{Binding MoveINCommand}"/>

                        <ninactrl:CancellableButton Grid.Column="3"
                                                    Height="26"
                                                    MinWidth="70"
                                                    Margin="8,0,0,0"
                                                    ButtonText="Out(+)"
                                                    CancelButtonImage="{StaticResource CancelSVG}"
                                                    CancelCommand="{Binding HaltFocuserCommand}"
                                                    CancelToolTip="Cancel"
                                                    Command="{Binding MoveOUTCommand}"/>
                    </Grid>

                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
