<UserControl x:Class="Cwseo.NINA.Focuser.FocuserDockables.FocuserDockableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ninactrl="clr-namespace:NINA.CustomControlLibrary;assembly=NINA.CustomControlLibrary"
             xmlns:ns="clr-namespace:NINA.Core.Locale;assembly=NINA.Core"
             xmlns:wpfutil="clr-namespace:NINA.WPF.Base.Utility;assembly=NINA.WPF.Base"
             mc:Ignorable="d"
             d:DesignHeight="232" d:DesignWidth="300">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <wpfutil:SharedResourceDictionary Source="/NINA.WPF.Base;component/Resources/StaticResources/Brushes.xaml" />
                <wpfutil:SharedResourceDictionary Source="/NINA.WPF.Base;component/Resources/StaticResources/SVGDictionary.xaml" />
                <wpfutil:SharedResourceDictionary Source="/NINA.WPF.Base;component/Resources/StaticResources/Converters.xaml" />
                <wpfutil:SharedResourceDictionary Source="/NINA.WPF.Base;component/Resources/StaticResources/ProfileService.xaml" />
                <wpfutil:SharedResourceDictionary Source="/NINA.WPF.Base;component/Resources/Styles/CheckBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="5">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- 연결 안됨 -->
                <Border Margin="0,5,0,0" VerticalAlignment="Top"
                    Visibility="{Binding FocuserInfo.Connected, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                    <UniformGrid VerticalAlignment="Center" Columns="2">
                        <TextBlock VerticalAlignment="Center" Text="{ns:Loc LblConnected}" />
                        <CheckBox Width="20"
                      Height="20"
                      Margin="5,0,0,0"
                      HorizontalAlignment="Left"
                      BorderBrush="Transparent"
                      IsChecked="{Binding FocuserInfo.Connected, FallbackValue=False, Mode=OneWay}"
                      IsEnabled="False"
                      Style="{StaticResource CheckmarkCheckbox}" />
                    </UniformGrid>
                </Border>

                <!-- 연결됨 -->
                <StackPanel Orientation="Vertical"
                Visibility="{Binding FocuserInfo.Connected, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">

                    <Border Margin="0,5,0,0">
                        <UniformGrid VerticalAlignment="Center" Columns="2">
                            <TextBlock VerticalAlignment="Center" Text="{ns:Loc LblIsMoving}" />
                            <CheckBox Width="20"
                          Height="20"
                          Margin="5,0,0,0"
                          HorizontalAlignment="Left"
                          BorderBrush="Transparent"
                          IsChecked="{Binding FocuserInfo.IsMoving, FallbackValue=False, Mode=OneWay}"
                          IsEnabled="False"
                          Style="{StaticResource InvertedCheckmarkCheckbox}" />
                        </UniformGrid>
                    </Border>

                    <Border Margin="0,5,0,0">
                        <UniformGrid VerticalAlignment="Center" Columns="2">
                            <TextBlock VerticalAlignment="Center" Text="{ns:Loc LblIsSettling}" />
                            <CheckBox Width="20"
                          Height="20"
                          Margin="5,0,0,0"
                          HorizontalAlignment="Left"
                          BorderBrush="Transparent"
                          IsChecked="{Binding FocuserInfo.IsSettling, FallbackValue=False, Mode=OneWay}"
                          IsEnabled="False"
                          Style="{StaticResource InvertedCheckmarkCheckbox}" />
                        </UniformGrid> 
                    </Border>

                    <Border Margin="0,5,0,0">
                        <UniformGrid VerticalAlignment="Center" Columns="2">
                            <TextBlock Text="{ns:Loc LblPosition}" />
                            <TextBlock Margin="5,0,0,0" Text="{Binding FocuserInfo.Position}" FontWeight="Bold" TextWrapping="WrapWithOverflow"/>
                        </UniformGrid>
                    </Border>

                    <Border Margin="0,5,0,5">
                        <UniformGrid VerticalAlignment="Center" Columns="2">
                            <TextBlock Text="{ns:Loc LblTemperature}" />
                            <TextBlock Margin="5,0,0,0" Text="{Binding FocuserInfo.Temperature, Converter={StaticResource UnitConverter}, ConverterParameter=' °C|2'}" TextWrapping="WrapWithOverflow"/>
                        </UniformGrid>
                    </Border>

                    <!-- Target + GO -->
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Target" MinWidth ="70" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1"
                                 Height="20"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding TargetPosition, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="True"/>

                        <!-- ✅ 실행 중 Cancel로 바뀌려면 Command는 NINA AsyncCommand여야 함 -->
                        <ninactrl:CancellableButton Grid.Column="2"
                                                    Height="20"
                                                    MinWidth="50"
                                                    Margin="5,0,0,0"
                                                    FontSize="8"
                                                    ButtonText="GO"
                                                    ToolTip="{ns:Loc LblMoveFocuserTooltip}"
                                                    HorizontalContentAlignment="Center"
                                                    CancelButtonImage="{StaticResource CancelSVG}"
                                                    CancelCommand="{Binding HaltFocuserCommand}"
                                                    CancelToolTip="Cancel"
                                                    Command="{Binding MoveToPositionCommand}">
                        </ninactrl:CancellableButton>
                    </Grid>

                    <!-- Step + In/Out -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/> 
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Step" MinWidth ="70" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Grid.Column="1"
                                 Height="20"
                                 VerticalContentAlignment="Center"
                                 Text="{Binding UserStep, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding IsMoving, Converter={StaticResource InverseBooleanConverter}}"/>

                        <ninactrl:CancellableButton Grid.Column="2"
                                                    Height="20"
                                                    MinWidth="50"
                                                    Margin="5,0,0,0"
                                                    HorizontalContentAlignment="Center"
                                                    VerticalContentAlignment="Center" 
                                                    FontSize="10"
                                                    ToolTip="Move in"
                                                    ButtonText="In(-)"
                                                    CancelButtonImage="{StaticResource CancelSVG}"
                                                    CancelCommand="{Binding HaltFocuserCommand}"
                                                    CancelToolTip="Cancel"
                                                    Command="{Binding MoveINCommand}"/>

                        <ninactrl:CancellableButton Grid.Column="3"
                                                    Height="20"
                                                    MinWidth="50"
                                                    Margin="5,0,0,0"
                                                    HorizontalContentAlignment ="Center"
                                                    VerticalContentAlignment="Center" 
                                                    FontSize="10"
                                                    ToolTip="Move out"
                                                    ButtonText="Out(+)"
                                                    CancelButtonImage="{StaticResource CancelSVG}"
                                                    CancelCommand="{Binding HaltFocuserCommand}"
                                                    CancelToolTip="Cancel"
                                                    Command="{Binding MoveOUTCommand}"/>
                    </Grid>

                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
